    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.nearurtechnologies.fuelon.Dashboard">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Training and Placement cell"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/profile"
                    android:layout_weight="30"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="2dp"
                        android:layout_height="match_parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_margin="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            app:lottie_fileName="profile.json"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true" />

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textColor="@drawable/btnback"
                            android:text="My Profile"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:id="@+id/tips"
                    android:layout_margin="5dp"
                    android:layout_weight="30"
                    app:cardCornerRadius="10dp"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="2dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/tips"
                            android:layout_gravity="center"
                            android:layout_height="70dp" />

                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textColor="@drawable/btnback"
                            android:text="Placement\nTips"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:id="@+id/notifications"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="5dp"
                    android:layout_weight="30"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="2dp"
                        android:layout_height="match_parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_margin="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            app:lottie_fileName="bell.json"
                            app:lottie_colorFilter="@android:color/white"
                            android:background="#FEA549"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true" />

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textColor="@drawable/btnback"
                            android:text="Notifications"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:id="@+id/cvupload"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="30"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="2dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/cv"
                            android:layout_height="80dp" />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textColor="@drawable/btnback"
                            android:text="CV Upload"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:id="@+id/about"
                    android:layout_weight="30"
                    app:cardCornerRadius="10dp"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/gne_fb_logo"
                            android:layout_height="80dp" />

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textColor="@drawable/btnback"
                            android:text="TNP Gndec"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:id="@+id/jobs"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="5dp"
                    android:layout_weight="30"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/jobs"
                            android:layout_height="80dp" />

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textColor="@drawable/btnback"
                            android:text="Jobs"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:id="@+id/contactus"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="30"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/contactus"
                            android:layout_height="70dp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textColor="@drawable/btnback"
                            android:text="Contact us"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:id="@+id/members"
                    android:layout_margin="5dp"
                    android:layout_weight="30"
                    app:cardCornerRadius="10dp"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/staff"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textColor="@drawable/btnback"
                            android:text="TNP\nMembers"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:id="@+id/logout"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="5dp"
                    android:layout_weight="30"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_margin="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            app:lottie_fileName="logout.json"
                            app:lottie_colorFilter="@android:color/white"
                            android:background="#00bfff"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true" />

                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textColor="@drawable/btnback"
                            android:text="Logout"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:text="Guru Nanak Dev Engineering College\nLudhiana"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />



    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>
